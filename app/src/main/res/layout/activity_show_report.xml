<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowReportActivity">


    <com.androidkun.xtablayout.XTabLayout
        android:id="@+id/xTablayout"
        android:layout_width="match_parent"
        android:layout_height="130px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:xTabBackgroundColor="@color/white"
        app:xTabDisplayNum="4"
        app:xTabDividerColor="#000"
        app:xTabDividerHeight="15dp"
        app:xTabDividerWidth="2dp"
        app:xTabDividerWidthWidthText="true"
        app:xTabIndicatorColor="@color/LightSkyBlue"
        app:xTabIndicatorHeight="4dp"
        app:xTabIndicatorRoundX="2dp"
        app:xTabIndicatorRoundY="2dp"
        app:xTabMode="scrollable"
        app:xTabSelectedTextColor="@color/black"
        app:xTabSelectedTextSize="20sp"
        app:xTabTextColor="#696969"
        app:xTabTextSize="15sp" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xTablayout"></androidx.viewpager.widget.ViewPager>


</androidx.constraintlayout.widget.ConstraintLayout>